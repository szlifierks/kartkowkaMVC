@model List<Number>
@{
    ViewData["Title"] = "Read";
    var lp = 1;
}

<!DOCTYPE html>

<div>
    <table class="table">
        <tr>
            <th>lp</th>
            <th>liczba</th>
            <th>akcje</th>
        </tr>
        @foreach (Number number in ViewBag.numberList)
        {
            <tr>
                <td>@(lp++)</td>
                <td>@number.Value</td>
                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-controller="Home" asp-route-id="@number.Id">update</a>
                </td>
            </tr>
        }
    </table>
    <br/>
    <a class="btn btn-warning" asp-action="Delete" asp-controller="Home">Delete</a>
</div>
